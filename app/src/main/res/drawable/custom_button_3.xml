<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/Gray"
                android:endColor="@color/Gray"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/Black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/Orange"
                android:startColor="@color/DarkOrange"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Gray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/PowderBlue"
                android:startColor="@color/PowderBlue"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/Black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>