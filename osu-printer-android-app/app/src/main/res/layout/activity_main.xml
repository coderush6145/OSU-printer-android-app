            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center"-->
            <!--android:visibility="visible"-->
            <!--android:text="No data." />-->

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
